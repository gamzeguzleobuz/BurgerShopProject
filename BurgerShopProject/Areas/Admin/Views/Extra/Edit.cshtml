@model BurgerShopProject.Entities.Extra

@{
    ViewData["Title"] = "Edit";
}
<h4>Extra</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ExtraName" class="control-label"></label>
                <input asp-for="ExtraName" class="form-control" />
                <span asp-validation-for="ExtraName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExtraPrice" class="control-label"></label>
                <input asp-for="ExtraPrice" type="number" class="form-control" />
                <span asp-validation-for="ExtraPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExtraImageName" class="control-label"></label>
                <input asp-for="ExtraImageName" type="file" class="form-control" />
                <span asp-validation-for="ExtraImageName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
